{#
/**
 * @file
 */
#}
<form{{ form.attributes }}>
  {{ form.form_build_id }}
  {{ form.form_token }}
  {{ form.form_id }}

  <div class="form-row">
    <div class="form-group col-md-6">
      {{ form.first_name }}
    </div>
    <div class="form-group col-md-6">
      {{ form.last_name }}
    </div>
  </div>
  <div class="form-group">
    {{ form.email_address }}
  </div>

  <div class="card mt-3">
    <div class="card-header">{{ "Choose the categories you are interested in:"|t }}</div>

    <div class="card-body">
      <div class="row">
        <div class="col-sm">
          <div class="form-group row">
            {{ form.preferences_wrapper.categories }}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12">
      {{ form.preferences_wrapper.actions }}
    </div>
  </div>
</form>
